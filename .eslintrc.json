{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "overrides": [{ "files": ["src/**/*.js[x]"] }],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],

  "rules": {
    "no-shadow": 0,
    "semi": ["warn", "never"],
    "eqeqeq": "error",
    "quotes": ["warn", "single"],
    "import/no-extraneous-dependencies": 0,
    "react/prop-types": 0
  }
}
